<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayProfileActivity">

        <TextView
            android:id="@+id/display_text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:text="@string/placeholder_name"
            android:textColor="#F73659"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_text_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/placeholder_name"
            android:textColor="#F73659"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_text_message"
            android:layout_width="325dp"
            android:layout_height="122dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="373dp"
            android:layout_marginEnd="43dp"
            android:text="@string/placeholder_name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/display_image_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="291dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imagepreview"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="324dp"
            android:layout_height="93dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="31dp"
            android:text="@string/commentsplaceholder" />

        <Button
            android:id="@+id/submitcontentbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/submitbtn" />

        <EditText
            android:id="@+id/leavecommenttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/leave_a_comment"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

</RelativeLayout>
